<div class='col-md-10 col-md-offset-1'>
  <h1>Users</h1>

  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Type</th>
        <th>Admin?</th>
        <th>Confirmed?</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.volunteer_type.try(:titleize) %></td>
          <td><%= user.admin? ? 'YES' : 'NO' %></td>
          <td><%= user.confirmed? ? 'YES' : 'NO' %></td>
          <td>
            <div class='btn-group'>
              <button type='button' class='btn btn-default'><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_user_path(user) %></button>
              <button type='button' class='btn dropdown-toggle btn-default' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
                <span class='caret'></span>
              </button>
              <ul class='dropdown-menu'>
                <li><%= link_to 'Delete', user_path(user), method: :delete, confirm: true %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
