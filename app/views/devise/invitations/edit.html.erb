<div class='col-md-offset-3 col-md-6'>
  <h2><%= t 'devise.invitations.edit.header' %></h2>
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token %>
    
    <div class='form-inputs'>
      <div class='row form-group'>
        <%= f.label :first_name, class: 'col-md-2 control-label required' %>
        <div class='col-md-6'>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>

      <div class='row form-group'>
        <%= f.label :last_name, class: 'col-md-2 control-label required' %>
        <div class='col-md-6'>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>

      <div class="row form-group">
        <%= f.label :phone, class: 'col-md-2 control-label required'%>
        <div class='col-md-6'>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
      </div>

      <div class='row form-group'>
        <%= f.label :volunteer_type, class: 'col-md-2 control-label required' %>
        <div class='col-md-6'>
          <%= f.select :volunteer_type, User.volunteer_types.map {|k, v| [k.humanize.titleize, k]}, {:prompt => "Select"}, { :class => 'form-control input-md'} %>
        </div>
      </div>

      <div class="row form-group">
        <%= f.label :password, class: 'col-md-2 control-label required' %>
        <div class='col-md-6'>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="row form-group">
        <%= f.label :password_confirmation, class: 'col-md-2 control-label required' %>
        <div class='col-md-6'>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class='col-md-1 col-md-offset-7'>
        <%= f.submit 'Save', :class => 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
