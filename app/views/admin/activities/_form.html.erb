<% if activity.errors.present? %>
  <%= display_validation_errors(activity) %>
<% end %>
<%= form_for([:admin, @friend, activity], remote: true) do |f| %>
  <div class='form-inputs'>
    
    <div class='row form-group'>
      <%= f.label :event, 'Type', class: 'col-md-12 control-label' %>
      <div class='col-md-12'>
        <%= f.select :event, options_for_select(Activity.events.map { |key, value| [key.humanize, key] }, activity.event), {include_blank: true}, {class: 'form-control'} %>
      </div>
    </div>

    <div class='row form-group'>
      <%= f.label :location_id, 'Location', class: 'col-md-12 control-label' %>
      <div class='col-md-12'>
        <%= collection_select(:activity, :location_id, Location.all, :id, :name, {prompt: true}, {class: 'form-control'}) %>
      </div>
    </div>

    <div class='row form-group'>
      <%= f.label :occured_at, 'Date/Time', class: 'col-md-12 control-label' %>
      <div class='col-md-12'>
        <%= f.date_select :occured_at, { start_year: Date.current.year, end_year: 1930, prompt: true, order: [:month, :day, :year] }, {class: 'form-control inline-date-select'} %>
        <%= f.time_select :occured_at, { prompt: true }, {class: 'form-control inline-date-select'} %>
      </div>
    </div>

    <div class='row form-group'>
      <%= f.label :notes, class: 'col-md-12 control-label' %>
      <div class='col-md-12'>
        <%= f.text_area :notes, {class: 'form-control', style: 'height: 200px;'} %>
      </div>
    </div>

    <div class='row'>
      <div class='col-md-1 col-md-offset-10'>
        <%= f.submit 'Save', :class => 'btn btn-primary', id: 'add-asylum-application-draft-link' %>
      </div>
    </div>
  </div>
<% end %>