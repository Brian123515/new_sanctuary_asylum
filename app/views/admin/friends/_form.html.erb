<%= form_for([:admin, @friend]) do |f| %>
  <div class= 'row'>
    <div class='col-md-10 col-md-offset-1'>
      
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item active">
          <a class="nav-link active" data-toggle="tab" href="#basic" role="tab">Basic</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#activities" role="tab">Activities</a>
        </li>
      </ul>

      <!-- Validation errors -->
      <%= render 'shared/form_errors', object: @friend %>
      
      <!-- Tab panes -->
      <div class="tab-content form-inputs">
        <div class="tab-pane active" id="basic" role="tabpanel">
          <%= render 'basic_form_fields', f: f, friend: @friend %>
        </div>
        <div class="tab-pane" id="activities" role="tabpanel">
          <%= render 'activities_form_fields', f: f %>
        </div>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-1 col-md-offset-10'>
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>

