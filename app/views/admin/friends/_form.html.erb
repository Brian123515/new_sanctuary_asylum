<%= form_for([:admin, @friend]) do |f| %>
  <div class= 'row'>
    <div class='col-md-10 col-md-offset-1'>
      
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item active">
          <a class="nav-link active" data-toggle="tab" href="#basic" role="tab">Basic</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#family" role="tab">Family</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#activities" role="tab">Activities</a>
        </li>
      </ul>

      <!-- Validation errors -->
      <%= display_validation_errors(@friend) %>
      
      <!-- Tab panes -->
      <div class="tab-content form-inputs">
        <div class="tab-pane active" id="basic" role="tabpanel">
          <%= render 'basic_form_fields', f: f, friend: @friend %>
        </div>
        <div class="tab-pane" id="basic" role="tabpanel">
          <%= render 'family_form_fields', f: f, friend: @friend %>
        </div>
        <div class="tab-pane" id="activities" role="tabpanel">
          <%= render 'activities_form_fields', f: f %>
        </div>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-1 col-md-offset-10'>
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= form_for([:admin, @friend.family_members.build], :remote => true) do |f| %>
  <div class='form-inputs'>
    <div class='row form-group'>
    <%= f.label :relationship, class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= f.select :relationship, options_for_select(FamilyMember.relationships.map { |key, value| [key.humanize, key] }), {include_blank: true}, {class: 'form-control'} %>
    </div>
  </div>

  <div class='row form-group'>
    <%= f.label :relation_id, 'Friend', class: 'col-md-2 control-label' %>
    <div class='col-md-6'>
      <%= collection_select(:family_member, :relation_id, Friend.all, :id, :full_name, {prompt: true}, {class: 'chzn-select form-control'}) %>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-1 col-md-offset-10'>
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  </div>
</div>
<% end %>


