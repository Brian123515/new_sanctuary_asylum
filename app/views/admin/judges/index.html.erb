<div class="row">
    <div class="col-md-3">
	<h1>Judges</h1>
    </div>
    <div class='col-md-4 col-md-offset-5'>
	<!-- search box? -->
    </div>
</div>


<script>
 var submitDeleteForm = function (element)  {
   if (confirm('Are you sure?')) {
     $(element).parents('form').submit();
   }
 }
</script>

<% if @judges.present? %>
    <table class='table table-bordered'>
	<thead>
	    <tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th style="max-width: 25px;">Remove</th>
	    </tr>
	</thead>
	<tbody>
	    <% @judges.each do |judge| %>
		<tr>
		    <td><%= judge.first_name %></td>
		    <td><%= judge.last_name %></td>
		    <td>
			<%= form_for [:admin, judge], method: :delete do |f| %>
			    <%= fa_icon 'times', :onclick => "submitDeleteForm(this)" %>
			<% end %>
		    </td>
		</tr>
	    <% end %>
	</tbody>
    </table>
    <div class='pull-right'>
	<%= will_paginate @judges %>
    </div>
<% end %>
